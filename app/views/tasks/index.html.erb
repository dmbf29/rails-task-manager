<h1>Your To-Do List</h1>

<h2>Tasks:</h2>
<h4><%= link_to "Add a Task", new_task_path %></h4>
<ul>
  <% @tasks.each_with_index do |task| %>
  <li>
    <%= link_to task.name, task_path(task) %>
    (<%= task.content %>)
    <p>
      <%= link_to "Edit Task", edit_task_path(task) %>
    </p>
    <p>
      <%= link_to "Delete Task", task_path(task),
      method: :delete,
      data: { confirm: "Are you sure?" } %>
    </p>
    </li>
  <% end %>
</ul>
